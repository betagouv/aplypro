= render partial: 'search-bar'

.fr-grid-row.fr-grid-row--gutters{"data-controller": "liquidation", "data-liquidation-generate-url-value": generate_liquidation_asp_schooling_path(@schooling), "data-liquidation-download-url-value": download_liquidation_asp_schooling_path(@schooling), "data-liquidation-current-version-value": @schooling.liquidation_version || 0}
  .fr-col-md-6
    %section.fr-my-3w.downloads-section
      %h3.fr-h6 Actions
      %ul.fr-btns-group.fr-btns-group--sm
        - if @schooling.pfmps.any?
          %li{"data-liquidation-target": "generateButton", style: "display: none;"}
            %button.fr-btn.fr-btn--primary{"data-action": "click->liquidation#generate"}
              %span Générer états liquidatifs
          %li{"data-liquidation-target": "regenerateButton", style: "display: none;"}
            %button.fr-btn.fr-btn--primary{"data-action": "click->liquidation#generate"}
              %span Regénérer les états liquidatifs
        - else
          %li
            %span Aucune PFMP disponible

  .fr-col-md-6
    %section.fr-my-3w.downloads-section
      %h3.fr-h6 Documents administratifs
      %ul.fr-links-group
        - if @schooling.attributive_decision.present?
          %li
            = link_to url_for(@schooling.attributive_decision), class: 'fr-link fr-link--download', download: true do
              Télécharger la décision d'attribution
        %li{"data-liquidation-target": "downloadButton", style: "display: none;"}
          = link_to download_liquidation_asp_schooling_path(@schooling), class: 'fr-link fr-link--download', download: true do
            États liquidatifs

.fr-table.fr-table--no-caption
  %table
    %thead
      %th{colspan: 2} Élève
    %tbody
      %tr
        %td Nom
        %td= @schooling.student.last_name
      %tr
        %td Prénom
        %td= @schooling.student.first_name
      %tr
        %td Date de naissance
        %td= l @schooling.student.birthdate
      %tr
        %td Code INSEE de la ville de naissance
        %td= display_insee_code(@schooling.student.birthplace_city_insee_code)
      %tr
        %td Code INSEE du pays de naissance
        %td= display_insee_code(@schooling.student.birthplace_country_insee_code)

.fr-table.fr-table--no-caption
  %table
    %thead
      %th{colspan: 2} Établissement
    %tbody
      %tr
        %td UAI
        %td= @schooling.establishment.uai
      %tr
        %td Nom
        %td= @schooling.establishment.name
      %tr
        %td Email
        %td= @schooling.establishment.email
.fr-table.fr-table--no-caption
  %table
    %thead
      %th{colspan: 2} Formation
    %tbody
      %tr
        %td Forfait journalier
        %td= number_to_currency @schooling.mef.wage.daily_rate
      %tr
        %td Plafond annuel
        %td= number_to_currency @schooling.mef.wage.yearly_cap


.fr-table.fr-table--no-caption
  %table
    %thead
      %th{colspan: 2} Coordonnées bancaires
    %tbody
      - rib = @schooling.student.rib(@schooling.establishment)
      - if rib.blank?
        %tr
          %td Pas de coordonnées bancaires renseignées
      - else
        %tr
          %td Nom du RIB
          %td= rib.name
        %tr
          %td IBAN
          %td= rib.iban
        %tr
          %td BIC
          %td= rib.bic
        %tr
          %td RIB appartient à l'élève ?
          %td= rib.personal? ? "Oui" : "Non"

%h2 Demandes de paiements
- if @pfmps.blank?
  Aucune demande de paiement envoyée
- else
  = render partial: "pfmps"
