.fr-col-md-6
  = dsfr_alert(type: :warning, title: "La suppression de la PFMP est définitive")

.fr-col-md-6.fr-mt-3w
  %ul
    %li
      Dates: du #{l @pfmp.start_date} au #{l @pfmp.end_date}
    %li
      Nombre de jours: #{@pfmp.day_count || "non renseigné"}
    %li
      Statut : #{@pfmp.status_badge}

  .fr-btns-group.fr-btns-group--inline.fr-mt-3w
    = link_to "Annuler", class_schooling_pfmp_path(@classe, @schooling, @pfmp), class: 'fr-btn fr-btn--secondary'
    = button_to "Confirmer la suppression", class_schooling_pfmp_path(@classe, @schooling, @pfmp), method: :delete, class: 'fr-btn fr-btn--danger fr-btn--secondary'
